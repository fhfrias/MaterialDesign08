<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a5dfe1"
    tools:context=".Material08">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cuadro"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/texto1"
            android:text="EL RAPTO DE LAS SABINAS"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#060679"
            android:background="#8c8fa6dc"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/texto2"
            android:text="JACQUES LOUIS DAVID"
            android:layout_gravity="top"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#ab0810"
            android:background="#8c8fa6dc"/>

    </android.support.v7.widget.CardView>


</LinearLayout>